<?xml version="1.0"?>

<encoder xmlns="http://www.github/cliffe/SecGen/encoder"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.github/cliffe/SecGen/encoder">
  <name>Markdown to HTML Encoder</name>
  <author>Thomas Shaw</author>
  <module_license>MIT</module_license>
  <description>Converts Markdown to HTML using the redcarpet ruby gem.</description>

  <type>markdown_to_html_encoder</type>
  <platform>linux</platform>
  <platform>windows</platform>
  <reference>https://github.com/vmg/redcarpet</reference>

  <read_fact>strings_to_encode</read_fact>

  <output_type>html</output_type>
</encoder>